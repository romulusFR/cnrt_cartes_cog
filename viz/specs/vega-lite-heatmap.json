{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "data/matrix_inverse.json"
    },
    "title": "Heatmap des cooccurrences avec poids 'inverse'",
    "config": {
        "view": {
            "strokeWidth": 0,
            "step": 6
        },
        "axis": {
            "domain": false
        }
    },
    "mark": { "type": "rect", "tooltip": { "content": "data" } },
    "params": [{ "name": "seuil", "value": 0.0, "bind": { "input": "range", "min": 0.0, "max": 80.0, "step": 0.5 } }],
    "transform": [{ "filter": "datum.lvl == 'mother'" }],
    "encoding": {
        "x": {
            "field": "src",
            "type": "nominal",
            "title": null,
            "axis": { "orient": "top", "labelFontSize": 8 }
        },
        "y": {
            "field": "dst",
            "type": "nominal",
            "title": null,
            "axis": { "orient": "left", "labelFontSize": 8 }
        },
        "color": {
            "field": "weight",
            "type": "quantitative",
            "scale": { "scheme": "yellowgreenblue" },
            "legend": {
                "title": null,
                "gradientLength": { "expr": "height" }
            },
            "condition": { "test": "datum.weight < seuil", "value": "white" }
        }
    }
}
